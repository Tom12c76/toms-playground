{
  "name": "Python 3",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "Welcome.py"
      ]
    },
    "vscode": {
      "settings": {
        "locale": "en"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ],
      "keybindings": [
        {
          "key": "ctrl+numpad_divide",
          "command": "editor.action.commentLine",
          "when": "editorTextFocus && !editorReadonly"
        }
      ]
    }
  },
  "postCreateCommand": "export PYTHONDONTWRITEBYTECODE=1 && export BROWSER=none",
  // "updateContentCommand": "[ -f packages.txt ] && sudo apt update && sudo apt upgrade -y && sudo xargs apt install -y <packages.txt; [ -f requirements.txt ] && pip3 install --user -r requirements.txt; pip3 install --user streamlit; echo 'âœ… Packages installed and Requirements met'",
  "postAttachCommand": "source .venv/bin/activate && streamlit run streamlit_app.py",
  "portsAttributes": {
    "8501": {
      "label": "Application",
      "onAutoForward": "notify"
    }
  },
  "forwardPorts": [
    8501
  ]
}
